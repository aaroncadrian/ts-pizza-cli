{
  "name": "ts-pizza-cli",
  "version": "1.0.0",
  "description": "From https://itnext.io/how-to-create-your-own-typescript-cli-with-node-js-1faf7095ef89",
  "main": "./lib/index.js",
  "bin": {
    "pizza": "./lib/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "sudo npm i -g && pizza",
    "refresh": "rm -rf node_modules && rm yarn.lock && yarn"
  },
  "repository": "https://github.com/aaroncadrian/ts-pizza-cli",
  "author": "Aaron Adrian <aaroncadrian@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "commander": "^6.1.0",
    "figlet": "^1.5.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^14.11.1",
    "nodeman": "^1.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
